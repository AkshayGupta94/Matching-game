<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:cf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Layout="using:Syncfusion.UI.Xaml.Controls.Layout"
    x:Class="cf.MainPage"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/bg.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="tb" Text="Select a level" FontSize="70" RenderTransformOrigin="0.5,0.5" FontFamily="Segoe Marker" Foreground="White" Margin="20,20,0,0">
            <TextBlock.RenderTransform>
                <CompositeTransform TranslateX="10"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Layout:SfCarousel x:Name="carousel" ItemsSource="{Binding Imags}"
                               VerticalAlignment="Top" Height="500"  SelectedIndex="4"
                               HorizontalAlignment="Left" Margin="10,150,10,10" SelectionChanged="carousel_SelectionChanged">
            <Layout:SfCarousel.ItemTemplate>
                <DataTemplate>
                    <Image Stretch="Uniform" Source="{Binding src}" Tapped="OpenPages"/>
                </DataTemplate>
            </Layout:SfCarousel.ItemTemplate>
        </Layout:SfCarousel>
    </Grid>
</Page>
